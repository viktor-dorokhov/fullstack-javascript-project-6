extends ../layouts/application.pug

block header
  = t('views.labels.new.title')

block content
  +formFor()(action=route('labels') method='post')
    +input(label, 'name', t('views.labels.name'), errors, {autofocus: true})(type="text")
    +submit(label)(value=t('views.labels.new.submit'))
    +back(t('views.labels.new.back'), route('labels'))
